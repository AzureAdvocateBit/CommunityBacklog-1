<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/Content/bootstrap/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/fontawesome/font-awesome.css" rel="stylesheet" />
    <link rel="shortcut-icon" href="~/Content/Images/favicon.ico" />
</head>
<body>
    <div class="navbar navbar-inverse">
        <div class="container">
            <div class="navbar-header">
                <a href="/" class="navbar-brand"><img src="~/Content/Images/favicon.png" style="float:left;margin:-12px 10px 0 0;" />Community Backlog</a>
                <button class="navbar-toggle" type="button" data-toggle="collapse" data-target="#navbar-main">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
            <div class="navbar-collapse collapse" id="navbar-main">
                <ul class="nav navbar-nav pull-right">
                    @Html.Partial("UserDetails")
                    <li>
                        <a href="/about"><i class="fa fa-question-circle"></i> &nbsp;About</a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container clearfix">
        @RenderBody()
    </div>
    <script src="~/Content/Scripts/jquery-1.9.0.js"></script>
    <script src="~/Content/Scripts/bootstrap.min.js"></script>
    @RenderSection("scripts", false)
</body>
</html>
